<form action="/subscribers/search" method="GET" class="mb-3">
    <input type="text" name="query" class="form-control" placeholder="Rechercher par nom ou code postal" />
    <button type="submit" class="btn btn-primary mt-2">Rechercher</button>
  </form>
  
<h2>Liste des abonnés</h2>
<table class="table">
<thead>
<tr>
<th>Nom</th>
<th>Email</th>
<th>Code Postal</th>
</tr>
</thead>
<tbody>
<% subscribers.forEach(subscriber => { %>
<tr>
<td><a href="<%= `/subscribers/${subscriber._id}` %>"><%= subscriber.name %></a></td>
<td><%= subscriber.email %></td>
<td><%= subscriber.zipCode %></td>
</tr>
<% }); %>
</tbody>
</table>
<a href="/subscribers/new">Créer un nouvel abonné</a>